= form_for(@subject) do |f|
  - if @subject.errors.any?
    #error_explanation
      %h2
        = pluralize(@subject.errors.count, "error")
        prohibited this subject from being saved:
      %ul
        - @subject.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :exam_info
    %br/
    = f.text_area :exam_info
  .field
    = f.label :subject_info
    %br/
    = f.text_area :subject_info
  .field
    = f.label :requirements
    %br/
    = f.text_area :requirements
  .actions
    = f.submit