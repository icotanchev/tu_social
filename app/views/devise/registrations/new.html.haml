.form-signin
  %h2.form-signin-heading Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    = f.email_field :email, :autofocus => true, class: 'input-block-level', placeholder: "Email address"
    = f.password_field :password, class: 'input-block-level', placeholder: "Password"
    = f.password_field :password_confirmation, class: 'input-block-level', placeholder: "Password Confirmation"
    %div
      %strong
      = f.label 'Professor Account' 
      = f.check_box :role
      %br
      %br
    #action
      %div= f.submit "Sign up", class: 'btn btn-large.btn-primary'
  = render "devise/shared/links"