= form_for @message, url: messages_path(recipient: params[:format]) do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg
  
  = f.text_field :subject, class: 'input-block-level', placeholder: "Subject"
  = f.text_area :content, row: 8, class: 'input-block-level', placeholder: "Content"
  .actions
    = f.submit 'Send', class: 'btn btn-large.btn-primary'
