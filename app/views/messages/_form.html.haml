= form_for @message, url: messages_path(recipient: params[:format]) do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :content
    = f.text_area :content, row: 8
    %br
    
  .actions
    = f.submit 'Save'
