%h2 Edit User

= form_for @user do |f|
	%div
		= f.label :email
		%br/
		= f.text_field :email
	%div
		= f.label :first_name
		%br/
		= f.text_field :first_name
	%div
		= f.label :last_name
		%br/
		= f.text_field :last_name
	%div
		= f.label :pin
		%br/
		= f.text_field :pin
	%div
		= f.label :faculty_number
		%br/
		= f.text_field :faculty_number
	%div
		= f.label :send_emails
		%br/
		= f.check_box :send_emails
		%br/
	= f.submit